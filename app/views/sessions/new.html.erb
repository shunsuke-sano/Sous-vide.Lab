<div class="text-center">
    <h1>ログイン</h1></h1>
</div>

<div class="row">
  <div class="offset-sm-3 col-sm-6">
        
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      
      <div class="form-group">
        <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
      </div>
      
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
      </div>
      
      <div class="text-center">
        <%= f.submit 'ログイン', class: 'btn btn-dark' %>
      </div>
    <% end %>
    <div class="text-center">初めての方は<%= link_to 'こちら', new_user_path %></div>
  </div>
</div>

