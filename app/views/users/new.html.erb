<div class="text-center">
    <h1>新規登録</h1>
</div>

<div class="row">
  <div class="offset-sm-3 col-sm-6 mb-3">
        
    <%= form_with(model: @user, local: true) do |f| %>
    
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: 'ユーザ名' %>
      </div>
      
      <div class="form-group">
        <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
      </div>
      
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
      </div>
      
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'パスワード（確認用）' %>
      </div>
      
      <div class="text-center">
        <%= f.submit 'アカウント作成', class: 'btn btn-dark' %>
      </div>
    <% end %>
    <div class="text-center">登録済みの方は<%= link_to 'こちら', login_path %></div>
  </div>
</div>
